<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/night"
    android:layout_height="wrap_content"
    android:id="@+id/rec111"
    tools:context=".recyclr111row">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/cardView"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="@color/blue1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cnstrLayout"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/tvcwiczenie"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="16dp"
                android:text="cw"
                android:textSize="25sp"
                android:textColor="@color/night"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvseria"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="16dp"
                android:textSize="25sp"
                android:textColor="@color/night"
                android:text="seria"
                app:layout_constraintEnd_toStartOf="@+id/tvpowtorzenie"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvpowtorzenie"
                android:layout_width="45dp"
                android:layout_height="65dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="16dp"
                android:textSize="25sp"
                android:textColor="@color/night"
                android:text="powtorzenia"
                app:layout_constraintEnd_toStartOf="@+id/tvprocent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvprocent"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/night"
                android:textSize="25sp"
                android:paddingLeft="10dp"
                android:text="procent"
                app:layout_constraintEnd_toStartOf="@+id/checkBox"
                app:layout_constraintTop_toTopOf="parent" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:buttonTint="@color/night"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>